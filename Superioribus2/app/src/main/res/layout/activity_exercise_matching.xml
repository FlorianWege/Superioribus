<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="moonlightflower.com.superioribus2.exercise.matching.ExerciseMatchingActivity"
    android:background="@drawable/activity_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/layout_exercise">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_background" >

            <Button
                android:text="&lt; Exercises"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button_exercises"
                android:onClick="button_exercises_onClick"
                android:background="@drawable/navi_background"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:minHeight="35dp" />

            <TextView
                style="@android:style/TextAppearance.Large"
                android:text="Select type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="18sp"
                android:gravity="center" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:gravity="center"
            android:background="#FF000000"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="Set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_set"
                    android:layout_weight="1" />

                <TextView
                    android:text="#0-0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_num"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="0/0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_localNum"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/panel_background"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:id="@+id/layout_source">

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/panel_background"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:id="@+id/layout_target">

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/panel_background"
            android:padding="5dp"
            android:layout_margin="5dp">

            <ViewFlipper
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:id="@+id/switcher_check">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check"
                    android:id="@+id/button_check"
                    android:onClick="button_check_onClick"
                    android:background="@drawable/button_background"
                    android:layout_gravity="bottom|right" />

                <Button
                    android:text="Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_next"
                    android:background="@drawable/button_background"
                    android:onClick="button_next_onClick" />

                <Button
                    android:text="Finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_finish"
                    android:background="@drawable/button_background"
                    android:onClick="button_finish_onClick" />
            </ViewFlipper>

        </FrameLayout>
    </LinearLayout>
</FrameLayout>
